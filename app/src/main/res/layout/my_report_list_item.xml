<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/report_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/nav_header_vertical_spacing"
    android:background="@drawable/list_item_selected">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4.4">

        <LinearLayout
            android:id="@+id/status_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/details_buttons_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/report_details_status"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/reportListColor"/>

            <TextView
                android:id="@+id/report_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.2"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/reportListColor"/>
        </LinearLayout>

        <TextView
            android:id="@+id/report_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status_layout"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/reportListColor"
            android:paddingBottom="@dimen/nav_header_vertical_spacing"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/report_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="@dimen/report_status_padding"
            android:paddingBottom="@dimen/report_list_padding"
            android:textSize="12sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/report_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/report_date"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@android:color/black" />

    </RelativeLayout>
</LinearLayout>